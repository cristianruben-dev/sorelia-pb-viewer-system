generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Usuario simplificado - todo en uno
model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String // Hash de la contraseña
  role      String   @default("user") // "admin", "user", o "admin,premium" para múltiples
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions     Session[]
  reportAccess UserReportAccess[]
  activityLogs ActivityLog[]

  @@map("users")
}

// Sesiones activas
model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Logs unificados de actividad
model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  type      String // "login", "logout", "report_access", etc.
  action    String // Descripción de la acción
  success   Boolean? // Para login: true/false, para otros puede ser null
  reportId  String? // Solo para acceso a reportes
  metadata  String? // JSON con info adicional si es necesario
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user   User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  report PowerBIContent? @relation(fields: [reportId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([type])
  @@index([createdAt])
  @@map("activity_logs")
}

// Reportes de PowerBI
model PowerBIContent {
  id         String   @id @default(cuid())
  title      String
  iframeHtml String // HTML completo del iframe de PowerBI
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userAccess   UserReportAccess[]
  activityLogs ActivityLog[]

  @@map("powerbi_contents")
}

model UserReportAccess {
  id        String   @id @default(cuid())
  userId    String
  reportId  String
  createdAt DateTime @default(now())

  user   User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  report PowerBIContent @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@unique([userId, reportId])
  @@map("user_report_access")
}

// Configuración del sistema
model SystemConfig {
  id        String   @id @default(cuid())
  key       String   @unique // "site_title", "site_logo", "site_favicon"
  value     String // El valor de la configuración (texto o URL de Cloudinary)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_config")
}
